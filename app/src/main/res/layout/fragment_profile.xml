<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EFE8E8">


    <TextView
        android:id="@+id/title_myfamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textAlignment="center"
        android:textColor="#C44912"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/title_myfamily"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="1dp"
        app:cardBackgroundColor="#5ACEE2"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:elevation="2dp"
        android:src="@drawable/user_image"
        android:background="@drawable/circular_profile_shape"
        app:layout_constraintTop_toTopOf="@id/profile_card"
        app:layout_constraintStart_toStartOf="@id/profile_card"
        app:layout_constraintEnd_toEndOf="@id/profile_card"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/name_of_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shubham Shree"
        android:elevation="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/user_image"
        app:layout_constraintStart_toStartOf="@id/user_image"
        app:layout_constraintEnd_toEndOf="@id/user_image"
        />
    <TextView
        android:id="@+id/email_of_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="anukoolroop123@gmail.com"
        android:elevation="10dp"
        android:textSize="15sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/name_of_user"
        app:layout_constraintStart_toStartOf="@id/name_of_user"
        app:layout_constraintEnd_toEndOf="@id/name_of_user"
        />


</androidx.constraintlayout.widget.ConstraintLayout>